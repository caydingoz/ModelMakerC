<UserControl x:Class="WpfApp.GUI.CustomControls.ModelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.GUI.CustomControls" 
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 mc:Ignorable="d" 
             d:DesignWidth="280"
			 x:Name="Root">
	<UserControl.Resources>
		<Style TargetType="TextBox">
			<Setter Property="Margin" Value="5,0,0,5"/>
			<Setter Property="Padding" Value="3,2,0,0"/>
			<Setter Property="FontFamily" Value="Comic Sans MS"/>
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Width" Value="115"/>
			<Setter Property="Height" Value="25"/>
		</Style>
		<Style TargetType="ComboBox">
			<Setter Property="Margin" Value="5,0,0,5"/>
			<Setter Property="FontFamily" Value="Comic Sans MS"/>
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Width" Value="115"/>
			<Setter Property="Height" Value="25"/>
		</Style>
		<Style TargetType="Label">
			<Setter Property="FontFamily" Value="Comic Sans MS"/>
		</Style>
		<Style TargetType="Button">
			<Setter Property="Margin" Value="5,0,0,5"/>
			<Setter Property="Width" Value="15"/>
			<Setter Property="Height" Value="15"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
	</UserControl.Resources>
	<Grid>
		<StackPanel DataContext="{Binding ElementName=Root}">
			<StackPanel>
				<Label FontWeight="Bold">Properties</Label>

				<ItemsControl ItemsSource="{Binding PropertyList}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<DockPanel Margin="5,0,0,5">
								<Button Tag="{Binding ID}" Click="RemoveProperty" Background="OrangeRed">
									<materialDesign:PackIcon Kind="Minus" Height="7.5" Width="7.5" />
								</Button>
								<ComboBox IsEditable="True" 
										  ItemsSource="{Binding Path=DataContext.PropertiesDataTypesList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
										  SelectedItem="{Binding PropertyType, UpdateSourceTrigger = PropertyChanged}"
										  />
								<TextBox Text="{Binding PropertyName, UpdateSourceTrigger = PropertyChanged}"/>
							</DockPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>

				<Button Click="AddNewProperty" Background="LightGreen">
					<materialDesign:PackIcon Kind="Plus" Height="7.5" Width="7.5" />
				</Button>
			</StackPanel>

			<Separator Margin="0,5,0,0" />

			<StackPanel>
				<Label FontWeight="Bold">Functions</Label>

				<ItemsControl ItemsSource="{Binding FunctionList}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<DockPanel Margin="5,0,0,5">
								<Button Tag="{Binding ID}" Click="RemoveFunction" Background="OrangeRed">
									<materialDesign:PackIcon Kind="Minus" Height="7.5" Width="7.5" />
								</Button>
								<ComboBox IsEditable="True" 
										  ItemsSource="{Binding Path=DataContext.FunctionDataTypesList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
										  SelectedItem="{Binding FunctionType}"
										  />
								<TextBox Text="{Binding FunctionName}"/>
							</DockPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>

				<Button Click="AddNewFunction" Background="LightGreen">
					<materialDesign:PackIcon Kind="Plus" Height="7.5" Width="7.5" />
				</Button>
			</StackPanel>

		</StackPanel>
	</Grid>
</UserControl>
